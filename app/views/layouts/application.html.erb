<!DOCTYPE html>
<html>
  <head>
    <title>AwesomeAnswers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <a href="/">Home</a>
    |
    <!-- <a href="/contact">Contact Us</a> -->
    <!-- <a href="<%= contact_path %>">Contact Us</a> -->
    <!-- helper from /rails/info/routes -->
    <!-- it's better to use path than hard coding url(/contact) since it might
    change latter -->
    <!-- use url helper for externer case inspect your link! like email, tweets..-->
    <%= link_to('All Questions', questions_path) %>
    |
    <%= link_to('Contect Us', contact_path) %>
    <%# if session[:user_id].present? %>
    <% if user_signed_in? %>
      <!-- <span>You're signed in <%#= :user_id %></span> -->
      <span>Hello <%= current_user.full_name %>, </span>
      <%= link_to 'Sign Out', sessions_path, method: :delete %>
    <% else %>
      <span>You're not signed in</span>
      <%= link_to 'Sign Up', new_user_path %>
      <%= link_to 'Sign In', new_session_path %>
    <% end %>
    <hr>

    <%= notice || alert %>
    <div class="container">
      <%= yield %>       
    </div>
  </body>
</html>
